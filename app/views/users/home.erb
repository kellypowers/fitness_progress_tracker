

<div class="text-center">
    <h2> <%=@user.name%>'s Workouts </h2>
    <ul>
        <%@workouts.each do |workout|%>
            <li class="text-center"><a href="/workouts/<%=workout.id%>"><%=workout.name%> </a></li>
